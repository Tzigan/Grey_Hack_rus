<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>GreyHackRussianPlugin</AssemblyName>
    <Description>Русификатор для игры Grey Hack</Description>
    <Version>1.0.0</Version>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <LangVersion>9.0</LangVersion>
    <NoWarn>CS1591</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="BepInEx.Unity.Mono" Version="6.0.0-pre.1" IncludeAssets="compile" />
    <PackageReference Include="HarmonyX" Version="2.10.2" IncludeAssets="compile" />
    <PackageReference Include="UnityEngine.Modules" Version="2022.3.5" IncludeAssets="compile" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Assembly-CSharp">
      <HintPath>$(GamePath)\Grey Hack_Data\Managed\Assembly-CSharp.dll</HintPath>
      <Private>false</Private>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <None Update="Translation\russian_translation.txt">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <PropertyGroup>
    <GamePath>D:\Games\steamapps\common\Grey Hack</GamePath>
    <PluginOutputPath>$(GamePath)\BepInEx\plugins</PluginOutputPath>
  </PropertyGroup>

  <Target Name="CopyPlugin" AfterTargets="Build">
    <Message Text="Copying plugin to game directory..." Importance="high" />
    <Copy SourceFiles="$(TargetPath)" DestinationFolder="$(PluginOutputPath)" />
    <Copy SourceFiles="$(ProjectDir)Translation\russian_translation.txt" DestinationFolder="$(PluginOutputPath)" />
  </Target>
</Project>